{
  "compilerOptions": {
    "target": "ES2019",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./../server-build",
    "typeRoots": ["../node_modules/@types", "./@types"]
  },
  "include": ["./"],
  "exclude": ["node_modules"]
}
